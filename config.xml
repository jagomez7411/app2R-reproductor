<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns = "http://www.w3.org/ns/widget"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id = "com.phonegap.app2-rv2"
	version = "1.0.0">
	
	<name> app-R Busca musica </name>
	<description>
	 Buscador de música
	</description>
	
	<author href="https://build.phonegap.com" email="javierr.morales39@gmail.com">
		Javier Rugerio Morales
	</author>
	
	<!--Personaliza la aplicación y plataforma-->
	<preference name="orientation"	value="portrait"/>
	<!-- <preference name="orientation"	value="landscape"/> -->
	<preference name="target-device"	value="universal"/>
	<preference name="fullscreen"	value="true"/>
	<preference name="android-installLocation"	value="auto"/>
	<preference name="permissions"	value="INTERNET"/>

	<!--Plugins-->
	<plugin name="cordova-plugin-device" spec="~1.1.4"/>
	<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
	
	<!--Para accesar a paginas de internet-->
    <allow-intent href="https://*/*"/>
    <acces origin="https://*/*"/>
    <allow-intent href="http://*/*"/>
    <acces origin="http://*/*"/> 
    <plugin name="cordova-plugin-whitelist" source="npm"/>
	
	<!--Plugin Audio-->
	<plugin name="cordova-plugin-media" spec="https://github.com/apache/cordova-plugin-media.git"/>
	<!--Colocar icono app-->

	<icon src="res/android/mdpi.png"/>

</widget>